
{# https://glauth.github.io/docs/rate-limiting.html #}
[behaviors]
  IgnoreCapabilities      = {{ glauth_behaviors.ignore_capabilities | default('false') | bodsch.core.config_bool(true_as='true', false_as='false') }}
  LimitFailedBinds        = {{ glauth_behaviors.limit_failed_binds | default('false') | bodsch.core.config_bool(true_as='true', false_as='false') }}
  NumberOfFailedBinds     = {{ glauth_behaviors.number_of_failed_binds | int }}
  PeriodOfFailedBinds     = {{ glauth_behaviors.period_of_failed_binds | int }}
  BlockFailedBindsFor     = {{ glauth_behaviors.block_failed_binds_for | int }}
  PruneSourceTableEvery   = {{ glauth_behaviors.prune_source_table_every | int }}
  PruneSourcesOlderThan   = {{ glauth_behaviors.prune_sources_older_than | int }}

